{% macro input(label, name, value, type) %}
    <div class="field">
        <label class="label" for="{{ name }}">{{ label }}</label>
        <div class="control">
            <input class="input"
                   type="{{ type|default('text') }}"
                   name="{{ name }}"
                   value="{{ value }}"
                   id="{{ name }}"/>
        </div>
    </div>
{% endmacro %}

{% macro checkbox(label, name, value, set) %}
    <div class="field">
        <label class="checkbox">
            <input type="checkbox" name="{{ name }}" value="{{ value }}"
                   {% if value == set %}checked="checked"{% endif %}>
            {{ label }}
        </label>
    </div>
{% endmacro %}

{% macro dropdown(label, name, data, value) %}
    <div class="field">
        <label class="label" for="{{ name }}">{{ label }}</label>
        <div class="control">
            <div class="select">
                <select name="{{ name }}" id="{{ name }}">
                    {% for key,val in data %}
                        <option value="{{ key }}" {% if key == value %}selected="selected"{% endif %}>{{ val }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>
{% endmacro %}
